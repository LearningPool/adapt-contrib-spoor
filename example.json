                    "_immutableStates": [
                    	"completed"
                    ]
                },
                {
                    "comment": "Listen for completion of the given content object. The objective ID is obtained from the content object JSON.",
                    "_content": [
                        "co-15"
                    ],
                    "_id": "@@contentObjects._byAdaptID[co-15][0]._objectiveId",
                    "_initialiseWithNotAttempted": true,
                    "_immutableStates": [
                    	"completed"
                    ]
                }
            ]
        }
	}
